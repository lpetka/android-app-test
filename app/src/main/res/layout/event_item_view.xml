<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:minHeight="80dp"
              android:clickable="false"
              android:orientation="horizontal"
              android:background="@color/transparent">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/screen_margin"
                android:id="@+id/event_disc"
                android:textSize="@dimen/text_bigger_size_20"
                android:layout_gravity="center_vertical"
                android:singleLine="false"
                tools:text="Football"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginLeft="@dimen/screen_margin"
                android:layout_marginBottom="@dimen/screen_margin_half">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_bigger_size"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="@dimen/screen_margin_half"
                    android:singleLine="false"
                    android:text="Organizer:"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/event_organizer"
                    android:textSize="@dimen/text_bigger_size"
                    android:layout_gravity="center_vertical"
                    android:singleLine="false"
                    tools:text="Marcin Zielinski"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginLeft="@dimen/screen_margin"
                android:layout_marginBottom="@dimen/screen_margin_half">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_bigger_size"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="@dimen/screen_margin_half"
                    android:singleLine="false"
                    android:text="Date:"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/event_date"
                    android:textSize="@dimen/text_bigger_size"
                    android:layout_gravity="center_vertical"
                    android:singleLine="false"
                    tools:text="08.06.2016 18:00"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginLeft="@dimen/screen_margin"
                android:layout_marginBottom="@dimen/screen_margin_half">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_bigger_size"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="@dimen/screen_margin_half"
                    android:singleLine="false"
                    android:text="Location:"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/event_location"
                    android:textSize="@dimen/text_bigger_size"
                    android:layout_gravity="center_vertical"
                    android:singleLine="false"
                    tools:text="Park Jordana, Krakow"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginLeft="@dimen/screen_margin"
                android:layout_marginBottom="@dimen/screen_margin_half">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_bigger_size"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="@dimen/screen_margin_half"
                    android:singleLine="false"
                    android:text="Description:"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/event_desc"
                    android:textSize="@dimen/text_bigger_size"
                    android:layout_gravity="center_vertical"
                    android:singleLine="false"
                    tools:text="Only pro players, not amateurs"/>

            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>